<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Flipkart Sample Automation Testing" thread-count="2" parallel="tests" verbose="1">
	<listeners>
		<listener class-name="zh.qa.webapp.listners.TestAllureListener"></listener>
		<listener class-name="zh.qa.webapp.listners.ExtentReportListener"></listener>
	</listeners>

	<test name="Home Page Test">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="zh.qa.webapp.test.HomePageTest" />
		</classes>
	</test>
	<test name="Search Page Result Test">
	<parameter name="browser" value="edge" />
	
		<classes>
			<class name="zh.qa.webapp.test.SearchPageTest" />
		</classes>
	</test> 

</suite> 